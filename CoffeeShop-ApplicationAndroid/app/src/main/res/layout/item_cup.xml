<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <!-- Vertical layout for Cup Name and Size -->
    <LinearLayout
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cup Name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewCupSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- ImageView on the right side -->
    <ImageView
        android:id="@+id/imageViewCup"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="Cup Image"
        android:layout_marginLeft="10dp"
        android:src="@drawable/image_placeholder" />
</LinearLayout>
